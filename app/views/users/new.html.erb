<div class="row">
  <div class="col-sm-6 col-sm-offset-1">
    <br />
    <br />
    <h1>Register here!</h1>
    <%= form_for :user, url: '/users' do |f| %>
    <div class="form-group">
      <h5>First Name: </h5>
      <%= f.text_field :first_name %>
    </div>
    <div class="form-group">
      <h5>Last Name: </h5>
      <%= f.text_field :last_name %>
    </div>
    <div class="form-group">
      <h5>Email: </h5>
      <%= f.text_field :email %>
    </div>
    <div class="form-group">
      <h5>Password: </h5>
      <%= f.password_field :password %>
    </div>
    <div class="form-group">
      <h5>Confirm Password: </h5>
      <%= f.password_field :password_confirmation %>
    </div>
    <div class='form-group'>
      <h5>Are you registering your farm?</h5>
      Yes: <%= f.check_box :is_farmer%>
      No: <%= f.check_box :no %>
    </div>
    <%= f.submit "Submit" %>
    <% end %>
  </div>
</div>
